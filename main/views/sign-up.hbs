<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="form-vertical">
                <h2>Student</h2>
                <p>For Student Sign Up</p>
                <form class="form-group" action="/sign-up/sign-up-student" method="post">
                    <div class="input-box">
                        <label for="StudentAddress">Email Address</label>
                        <input type="text" name="Email" class="form-control" id="Email" placeholder="your@email.com">
                    </div>
                    <div class="input-box">
                        <label for="DepartmentName">Password</label>
                        <input type="text" name="Password" class="form-control" id="Password" placeholder="Password">
                    </div>
                    <div class="input-box">
                        <label for="Location">First Name</label>
                        <input type="text" name="FirstName" class="form-control" id="FirstName"
                               placeholder="First Name">
                    </div>
                    <div class="input-box">
                        <label for="Location">Last Name</label>
                        <input type="text" name="LastName" class="form-control" id="LastName" placeholder="Last Name">
                    </div>
                    <div class="input-box">
                        <label for="Location">CWID</label>
                        <input type="text" name="CWID" class="form-control" id="CWID" placeholder="CWID">
                    </div>
                    <div class="input-box">
                        <label for="Location">BirthDay</label>
                        <input type="text" name="BirthDay" class="form-control" id="Birthday"
                               placeholder="ex:2000-01-01">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>


        <div class="vertical-divider"></div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-vertical">
                <h2>STAFF</h2>
                <p>For Staff/Teacher Sign Up</p>
                <form class="form-group" action="/sign-up/sign-up-teacher" method="post">
                    <div class="input-box">
                        <label for="CourseID">Email Address</label>
                        <input type="text" name="Email" class="form-control" id="Email" placeholder="your@email.com">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">Password</label>
                        <input type="text" name="Password" class="form-control" id="Password" placeholder="Password">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">SSN</label>
                        <input type="text" name="SSN" class="form-control" id="SSN" placeholder="SSN">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">First Name</label>
                        <input type="text" name="FirstName" class="form-control" id="FirstName"
                               placeholder="First Name">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">Last Name</label>
                        <input type="text" name="LastName" class="form-control" id="LastName" placeholder="Last Name">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">Birthday</label>
                        <input type="text" name="Birthday" class="form-control" id="BirthDay"
                               placeholder="ex:2000-01-01">
                    </div>
                    <div class="input-box">
                        <label for="CourseName">Job Title</label>
                        <input type="text" name="JobTitle" class="form-control" id="JobTitle" placeholder="Job Title">
                    </div>
                    <div class="input-box">
                        <label for="departmentCourse">Select Department</label>
                        <select name="Work as">
